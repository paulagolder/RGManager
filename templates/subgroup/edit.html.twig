{% extends 'rgmaster.html.twig' %}


{% block stylesheets %}
      {{ parent() }}
   <link href="{{ asset('/css/subgroup.css') }}" rel="stylesheet" />

{% endblock %}




{% block middle %}
<div id="middle" >
<div id="subgroupedit"  >
<div>
 <div class="heading  row" >
 <div class="label">{{'edit subgroup' }}:</div>
 <div class="title" > {{subgroup.name}}</div>
